# Ignore everything under tools by default
*
*/

# Preserve directory markers when present
!*/.gitkeep

# Allow docker compose manifest for tools stack
!docker-compose.yml

# Allow config directory and explicitly tracked files
!config/

# Authelia configuration (explicit files only)
!config/authelia/
config/authelia/*
!config/authelia/configuration.yml
!config/authelia/users_database.yml.template

# ddclient configuration
!config/ddclient/
config/ddclient/*
!config/ddclient/ddclient.conf

# Homepage dashboard configuration
!config/homepage/
config/homepage/*
!config/homepage/*.yaml

# SWAG nginx configuration
!config/swag/
config/swag/*
!config/swag/nginx/
config/swag/nginx/*
!config/swag/nginx/site-confs/
config/swag/nginx/site-confs/*
!config/swag/nginx/site-confs/default.conf
!config/swag/nginx/snippets/
config/swag/nginx/snippets/*
!config/swag/nginx/snippets/authelia/
config/swag/nginx/snippets/authelia/*
!config/swag/nginx/snippets/authelia/authrequest.conf
!config/swag/nginx/snippets/authelia/location.conf
!config/swag/nginx/proxy-confs/
config/swag/nginx/proxy-confs/*
!config/swag/nginx/proxy-confs/_all.subdomain.conf
